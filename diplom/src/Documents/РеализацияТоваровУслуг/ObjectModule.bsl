    РезультатЗапроса = Запрос.Выполнить();
    
    Выборка = РезультатЗапроса.Выбрать();
    
    Пока Выборка.Следующий() Цикл
            
        Если Выборка.НоменклатураАбонентскаяПлата = 0 Или Выборка.НоменклатураРаботыСпециалиста = 0 Тогда
            
            ТекстСообщения = НСтр("ru = 'Проверьте заполнение значений констант ""Номенклатура абонентская плата"" и ""Номенклатура работы специалиста"".
                                        |Обе константы должны быть заполнены!'");
                
            ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, , , );
                
            Возврат;
            
        КонецЕсли;
                        
        //Выполним условие "Если в договоре ненулевая сумма абонентской платы, добавьте..."     
        Если ЗначениеЗаполнено(Выборка.СуммаАбонентскойПлаты) Тогда
        
            НоваяСтрокаУслуги = ДокументОбъект.Услуги.Добавить();
            НоваяСтрокаУслуги.Номенклатура = Выборка.НоменклатураАбонентскаяПлата;
            НоваяСтрокаУслуги.Количество = 1;
            НоваяСтрокаУслуги.Цена = Выборка.СуммаАбонентскойПлаты;
            НоваяСтрокаУслуги.Сумма = Выборка.СуммаАбонентскойПлаты * НоваяСтрокаУслуги.Количество;
                
        Иначе
                      
            ТекстСообщения = НСтр("ru = 'В договоре не указана сумма абонентской платы.'");
            
            ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, , , );
        
        КонецЕсли;
        
        //Выполним условие "Если ... есть информация о выполненных работах по этому договору"    
        Если ЗначениеЗаполнено(Выборка.КоличествоЧасов) Тогда
        
            НоваяСтрокаУслуги = ДокументОбъект.Услуги.Добавить();
            НоваяСтрокаУслуги.Номенклатура = Выборка.НоменклатураРаботыСпециалиста;
            НоваяСтрокаУслуги.Количество = Выборка.КоличествоЧасов;
            НоваяСтрокаУслуги.Цена = Выборка.СуммаКОплате / Выборка.КоличествоЧасов;
            НоваяСтрокаУслуги.Сумма = Выборка.СуммаКОплате;
            
        Иначе
        
            ТекстСообщения = НСтр("ru = 'В текущем месяце не было работ по договору.'");
                
            ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, , , );
            
        КонецЕсли;
    
    КонецЦикла;
    
    ДокументОбъект.Записать(РежимЗаписиДокумента.Запись);
    
